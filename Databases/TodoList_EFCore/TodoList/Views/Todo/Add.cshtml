@using TodoList.Dtos
@model CreateTodoDto

<h2>Register</h2>

@using (Html.BeginForm("Add", "Todo", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Todo.Name)
        @Html.TextBoxFor(a => a.Todo.Name, "", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Todo.Category)
        @Html.TextBoxFor(a => a.Todo.Category, "", new {@class = "form-control"})
     </div>

      <div class="form-group">
        @Html.LabelFor(a => a.Todo.CreatedUtc)
        @Html.TextBoxFor(a => a.Todo.CreatedUtc, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Todo.UserId)
        @Html.DropDownListFor(a => a.Todo.UserId, new SelectList(@Model.Users, "Id", "FullName"), "", new {@class = "form-control"} )
    </div>
        
    <input class="btn btn-primary" type="submit" value="Submit"/>
}